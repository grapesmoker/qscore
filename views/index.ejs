<!DOCTYPE html>
<html>
  <head>
    <title>
    	<%= title %>
    </title>
    <% include header %>
  </head>
  <body>
    <h1>
    	<%= title %>
    </h1>
    <% include menubar %>
    <div class="container-fluid">
		<div class="row-fluid">
			<% include sidebar %>
			<div class="span10">
				<%
				if (typeof message != 'undefined') {
				%>
					<div class="alert alert-info">
						<%= message %>
					</div>
				<%
				}
				%>
				<%
				if (!und.isUndefined(locals.tournaments) && tournaments != null && !und.isUndefined(locals.user)) {
				%>
					<h3>Your Tournaments</h3>
				<%
					tournaments.forEach(function(tournament) {
				%>
						<p>
							<a href="/viewtour/<%= tournament._id %>"><%= tournament.tourName %></a> - <%= tournament.secret %>
						</p>
				<%
					});	
				}
				else {
				%>
					<h3>Welcome to QScore</h3>
					<p>QScore is a web-based application for keeping score in quizbowl games. In order to use QScore, please register
						for an account and log in. For details on using QScore, please read the <a href="/faq/">FAQ</a>. </p>
				<%
				}
				%>
			</div>
		</div>
	</div>
  </body>
</html>